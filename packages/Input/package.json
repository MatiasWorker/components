{
    "name": "@bxreact/input",
    "version": "2.3.1",
    "publishConfig": {
        "access": "public"
    },
    "type": "module",
    "scripts": {
        "build": "exports src/**/*.tsx --exports --css-import-source @bxreact/theme/css --types --main index",
        "exports": "exports src/**/*.tsx --exports --css-import-source @bxreact/theme/css --types --publish --main index"
    },
    "license": "ISC",
    "dependencies": {
        "@bxreact/icon": "*",
        "@bxreact/theme": "*",
        "classnames": "*",
        "@types/classnames": "*",
        "@types/react-date-range": "^1.4.4",
        "react-date-range": "^1.4.0"
    },
    "peerDependencies": {
        "react": ">=17.0.2",
        "react-dom": ">=17.0.2",
        "@types/react": ">=17.0.38"
    },
    "devDependencies": {
        "@bxreact/tsconfig": "*"
    },
    "module": "./dist/index.js",
    "types": "types/index.d.ts",
    "exports": {
        "./index": "./dist/index.js",
        ".": "./dist/index.js",
        "./Textarea": "./dist/Textarea.js",
        "./Checkbox": "./dist/Checkbox.js",
        "./Radio": "./dist/Radio.js",
        "./Select": "./dist/Select.js"
    },
    "typesVersions": {
        "*": {
            "index": [
                "./types/index.d.ts"
            ],
            "Textarea": [
                "./types/Textarea.d.ts"
            ],
            "Checkbox": [
                "./types/Checkbox.d.ts"
            ],
            "Radio": [
                "./types/Radio.d.ts"
            ],
            "Select": [
                "./types/Select.d.ts"
            ]
        }
    }
}
