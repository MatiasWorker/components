{
    "name": "@bxreact/input",
    "version": "2.7.0",
    "publishConfig": {
        "access": "public"
    },
    "type": "module",
    "scripts": {
        "build": "exports src/**/*.tsx --exports --css-import-source @bxreact/theme/css --types --main index",
        "exports": "exports src/**/*.tsx --exports --css-import-source @bxreact/theme/css --types --publish --main index"
    },
    "license": "ISC",
    "dependencies": {
        "@bxreact/icon": "*",
        "@bxreact/theme": "*",
        "@bxreact/field-switch": "*",
        "classnames": "*",
        "@types/classnames": "*",
        "@types/react-date-range": "^1.4.4",
        "react-date-range": "^1.4.0"
    },
    "peerDependencies": {
        "react": ">=17.0.2",
        "react-dom": ">=17.0.2",
        "@types/react": ">=17.0.38"
    },
    "devDependencies": {
        "@bxreact/tsconfig": "*"
    },
    "module": "./dist/index.js",
    "exports": {
        "./index": "./dist/index.js",
        ".": "./dist/index.js",
        "./checkbox": "./dist/checkbox/checkbox.js",
        "./radio": "./dist/radio/radio.js",
        "./select": "./dist/select/select.js",
        "./textarea": "./dist/textarea/textarea.js"
    },
    "types": "types/index.d.ts",
    "typesVersions": {
        "*": {
            "index": [
                "./types/index.d.ts"
            ],
            "checkbox": [
                "./types/checkbox/checkbox.d.ts"
            ],
            "radio": [
                "./types/radio/radio.d.ts"
            ],
            "select": [
                "./types/select/select.d.ts"
            ],
            "textarea": [
                "./types/textarea/textarea.d.ts"
            ]
        }
    }
}